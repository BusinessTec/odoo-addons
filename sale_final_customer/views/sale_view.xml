<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.final_customer</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="final_customer"/>
                </xpath>
            </field>
        </record>

        <record id="view_quotation_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.final_customer</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="final_customer"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.final_customer</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_shipping_id']" position="before">
                    <field name="final_customer"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
